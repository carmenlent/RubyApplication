<p id="notice"><%= notice %></p>

<h1>Listing Library Cat Books</h1>

<table>
  <thead>
    <tr>
      <th>Bookname</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @library_cat_books.each do |library_cat_book| %>
      <tr>
        <td><%= library_cat_book.bookname %></td>
        <td><%= library_cat_book.author %></td>
        <td><%= library_cat_book.category %></td>
        <td><%= link_to 'Show', library_cat_book %></td>
        <td><%= link_to 'Edit', edit_library_cat_book_path(library_cat_book) %></td>
        <td><%= link_to 'Destroy', library_cat_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

